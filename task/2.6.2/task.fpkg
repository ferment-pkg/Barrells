pkgname=task
version=2.6.2
desc="Taskwarrior is a command line task list management utility"
arch="universal"
source="https://github.com/GothenburgBitFactory/taskwarrior/archive/refs/tags/v2.6.2.tar.gz"
license="MIT"
Dbuild=cmake
build(){
    mkdir build
    cmake -B build -S . -DCMAKE_BUILD_TYPE=Release -GNinja
    cmake --build build -- -j4
}

test(){
    @output="command -v task"
    match $output != ""
}
install(){
   cmake --install build
}